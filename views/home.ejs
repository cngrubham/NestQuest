<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'NestQuest | Home' }) %>
        <link rel="stylesheet" href="/public/home.css">
        <link rel="stylesheet" href="/public/main.css">
        <link rel="stylesheet" href="/public/nav.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>


<body>
    <main>
            <%- include('./partials/nav.ejs') %>
            <div id="top-slide">
                <h1>NestQuest</h1>
            </div>

            <div class="image-container">
                <img class="bird-logo bird-logo-1" src="/public/assets/imgs/bunting.png" />
                <img class="bird-logo bird-logo-2" src="/public/assets/imgs/bunting2.png" />
            </div>
            <button id="open-modal-button" onclick="toggleModal()">Log In</button>

            <section class="nestQuest-home">
                <!-- login -->
                <div id="user-modal" class="modal-wrapper">
                    <div class="modal-box">
                        <form action="/user/login" class="form-input" method="POST">
                            <div class="mb-3 input-group-cng">
                                <label for="login-username-input" class="form-label">User Name</label>
                                <input class="form-control" name="userName" id="login-username-input">
                            </div>
                            <div class="mb-3 input-group-cng">
                                <label for="login-password-input" class="form-label">Password</label>
                                <input class="form-control" name="password" id="login-password-input"></input>
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="/" id="close-modal-button" onclick="toggleModal()">close</a>
                        </form>
                    </div>

                    <!-- new user link-->
            </section>
            <a href="user/new">New User</a>
            <%- include('./partials/footer.ejs') %>
        </main>

        <script src="/public/js/modal.js"></script>
        <script src="/public/js/nav.js"></script>


    </body>

</html>