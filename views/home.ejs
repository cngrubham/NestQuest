<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'NestQuest | Home' }) %>
        <link rel="stylesheet" href="./public/home.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

        <main>
            <button id="open-modal-button" onclick="toggleModal()">open</button>
            <section class="nestQuest-home">
                <!-- login -->
                <div id="user-modal" class="modal-wrapper">
                    <div class="modal-box">
                        <form class="form-input">
                            <!-- add form method? -->
                            <div class="mb-3 input-group-cng">
                                <label for="name-input" class="form-label">Name</label>
                                <input class="form-control" id="name-input">

                            </div>
                            <div class="mb-3 input-group-cng">
                                <label for="username-input" class="form-label">User Name</label>
                                <input class="form-control" id="username-input">
                            </div>
                            <div class="mb-3 input-group-cng">
                                <label for="passwor-input" class="form-label">Password</label>
                                <input class="form-control" id="password-input"></input>

                            </div>

                        </form>
                        <button onclick="submitUserDetails()" class="btn btn-primary">Submit</button>
                        <button id="close-modal-button" onclick="toggleModal()">close</button>
                    </div>

                    <!-- new user link-->

                    <a href="user/new">New User</a>

            </section>
        </main>
        <script src="/public/js/modal.js"></script>
