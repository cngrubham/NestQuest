<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head.ejs', {title: 'Sightings | NestQuest' }) %>
        <link rel="stylesheet" href="/public/nav.css">
        <link rel="stylesheet" href="/public/sightings-index.css">
        <title>Sightings</title>
        <%- include('../partials/nav.ejs') %>

</head>

<body>
    <h1>Sightings-index</h1>

    <div class="page-container">
        <% sightingsList.forEach(function(sighting) { %>
            <!-- sighting info -->
            <div class="sightings-card">
                <p>
                    <%= sighting.user._id %> saw a <%= sighting.bird.comName %> in <%= sighting.region.name %>
                </p>
                <img class="sightings-card-img" src="<%= sighting.picture || '/public/assets/imgs/bunting.png' %>"
                    alt="<%= sighting.bird.comName %>" />

                <div class="sighting-action">
                    <button><a href="/sightings/<%= sighting._id %>">View Details</a></button>
                </div>


            </div>

            <% }) %>
    </div>

    <script src="/public/js/nav.js"></script>
    <%- include('../partials/footer.ejs') %>
</body>

</html>