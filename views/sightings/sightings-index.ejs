<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head.ejs', {title: 'Sightings | NestQuest' }) %>
        <link rel="stylesheet" href="/public/nav.css">
        <title>Sightings</title>
        <%- include('../partials/nav.ejs') %>

</head>

<body>
    <h1>Sightings-index</h1>

    <div>
        <% sightingsList.forEach(function(sighting) { %>
            <!-- sighting info -->
            <div style="
  border: 1px solid black;
  border-radius: 8px;
  padding: 8px;
  margin-bottom: 16px;
">
                <p>
                    <%= sighting.user._id %> saw a <%= sighting.bird.comName %> in <%= sighting.region.name %>
                </p>
                <img style="height: 100px; width: 100px;"
                    src="<%= sighting.picture || '/public/assets/imgs/bunting.png' %>"
                    alt="<%= sighting.bird.comName %>" />
                <p>
                    <%= sighting.description %>
                </p>
                <p>
                    <%= sighting.dateAdded%>
                </p>
                <div>
                    <div class="sighting-action">
                        <a href="/sightings/<%= sighting._id %>">View</a>
                    </div>

                </div>
            </div>

            <% }) %>
    </div>

    <script src="/public/js/nav.js"></script>
    <%- include('../partials/footer.ejs') %>
</body>

</html>