<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'New Sighting | NestQuest' }) %>
        <link rel="stylesheet" href="/public/nav.css">
        <link rel="stylesheet" href="/public/form.css">
        <%- include('../partials/nav.ejs') %>

</head>

<body>
    <div class="page-container">
        <section class="form-head">
            <h1>New Sighting!</h1>
            <h2>You're creating a sighting for <%= bird.comName %>
            </h2>
        </section>
        <section class="form-body">
            <div class="form-container">
                <form method="POST" action="/sightings">
                    <!-- might need to change link -->
                    <!-- Region -->
                    <div class="label-group"><label for="sightingRegion">Region:</label>
                        <select class="drop-down" name="region" id="sightingRegion" autocomplete="off" required>
                            <option value="">Please Select a Region</option>
                            <% regionList.forEach(function(region) { %>
                                <option value="<%= region._id %>">
                                    <%= region.name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                    <!-- Details -->
                    <div class="label-group">
                        <label for="content">Details:</label>
                        <textarea class="form-items" type="text" id="content" name="description" required></textarea>
                    </div>
                    <!-- Bird Pic input -->
                    <div class="label-group"><label for="profile-pic" class="form-label">Optional Image Url:</label>
                        <input class="form-items" type="text" id="profile-pic" name="picture" class="form-input">
                    </div>
                    <input type="hidden" id="birdInput" name="bird" value="<%= bird._id %>">
                    <input class="submit-button" type="submit" value="Submit">
            

                </form>

            </div>
        </section>
        <%- include('../partials/footer.ejs') %>
    </div>
    <script src="/public/js/nav.js"></script>
</body>

</html>